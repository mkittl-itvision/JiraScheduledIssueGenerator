<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="scheduledIssue"/>
    
    <!-- add our web resources -->
    <web-resource key="scheduledIssue-resources" name="scheduledIssue Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="scheduledIssue.css" location="/css/scheduledIssue.css"/>
        <resource type="download" name="scheduledIssue.js" location="/js/scheduledIssue.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>scheduledIssue</context>
    </web-resource>
    
    <!-- publish our component -->
    <component key="myPluginComponent" class="com.itvision.jira.plugin.scheduledIssue.MyPluginComponentImpl" public="true">
        <interface>com.itvision.jira.plugin.scheduledIssue.MyPluginComponent</interface>
    </component>
    
     <component key="schedulerComponent" class="com.itvision.jira.plugin.scheduler.IssueGeneratorImpl"
             system="true" public="true">
        <description>The plugin component that schedules Issue generation</description>
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
        <interface>com.itvision.jira.plugin.scheduler.IssueGenerator</interface>
    </component>
    
    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
	
	<component-import key="pluginScheduler" interface="com.atlassian.sal.api.scheduling.PluginScheduler" />
    
</atlassian-plugin>